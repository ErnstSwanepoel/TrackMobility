<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackMobility.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Label 
                Text="Select a method of transport"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32" />

            <Button 
                x:Name="SaveBikeTrip"
                Text="Bike"
                SemanticProperties.Hint="Saves a bike entry" />
            
            <Button 
                x:Name="SaveBusTrip"
                Text="Bus"
                SemanticProperties.Hint="Saves a bus entry" />

            <Button 
                x:Name="SaveTrainTrip"
                Text="Train"
                SemanticProperties.Hint="Saves a train entry" />

            <Button 
                x:Name="SaveCarTrip"
                Text="Car"
                SemanticProperties.Hint="Saves a car entry" />
            
            <Label
                x:Name="TripCounter" />

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
